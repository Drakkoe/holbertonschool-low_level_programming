#include "main.h"
/**
 * print_last_digit - Print the last digit of a number
 * @n: checks the number to read
 *
 * Return: The last digit
 */
int print_last_digit(int n)
{
	int print_last_digit = n % 10;

	if (n < 0)
	{
		printf("%d", n, n % 10);
	}
	else if (n > 0)
	{
		printf("%d", n, n % 10);
	}
	return ("%d", n, n % 10);
}
